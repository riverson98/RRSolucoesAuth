{
  "Routes": [
    {
      "UpstreamPathTemplate": "/auth/{everything}",
      "DownstreamPathTemplate": "/api/Auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth-service",
          "Port": 8080
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/user/{everything}",
      "DownstreamPathTemplate": "/api/User/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "users-service",
          "Port": 8080
        }
      ]
    }
  ]
}